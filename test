package com.samsung.android.companionservice.watchface.data

object AutoSyncData {
    data class WatchfaceInfo (var pn : String?, var cn : String?, var fId : Int? )
    private var autoSyncProcess = false
    private var currentSyncWF : WatchfaceInfo? = null
    private var syncImageData : Triple<ArrayList<String>?,ArrayList<String>?,ArrayList<String>?>? = null

    @JvmStatic
    fun clearAll(){
        autoSyncProcess = false
        currentSyncWF = null
        syncImageData = null
    }

    @JvmStatic
    fun setAutoSyncProcess(status: Boolean) {
        autoSyncProcess = status
    }

    @JvmStatic
    fun isAutoSyncOn() : Boolean{
        return autoSyncProcess
    }

    @JvmStatic
    fun setCurrentSyncWF(wfInfo : WatchfaceInfo) {
        currentSyncWF = wfInfo
    }

    @JvmStatic
    fun getCurrentSyncWF() : WatchfaceInfo? {
        return currentSyncWF
    }

    @JvmStatic
    fun putImageData(imageData : Triple<ArrayList<String>,ArrayList<String>,ArrayList<String>>?){
        syncImageData = imageData
    }

    @JvmStatic
    fun getAddedList() : ArrayList<String>? {
        return syncImageData?.let { it.second } ?: run { null }
    }
    @JvmStatic
    fun getDeletedList() : ArrayList<String>? {
        return syncImageData?.let { it.third } ?: run { null }
    }
    @JvmStatic
    fun getImageList() : ArrayList<String>? {
        return syncImageData?.let { it.first } ?: run { null }
    }
}
